{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": ["*"],
      "components/*": ["components/*"],
      "screens/*": ["screens/*"],
      "modals/*": ["components/modals/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
